<h1>Log In</h1>

<%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :username %><br />
      <%= text_field_tag(
          :username,
          params[:username],
          class: 'form-control'
      ) %>
    </div>
    <div class="form-group">
      <%= label_tag :password %><br />
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
    <%= submit_tag "Log In", class: 'btn btn-primary' %>
<% end %>
