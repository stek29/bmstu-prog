<% if flash[:errors] %>
  <% flash[:errors].each do |field, msg| %>
    <div class="alert alert-danger">
      <strong><%=field%></strong>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<%= form_tag(
  url_for(controller: :bin_reverser, action: :view),
  method: :post
) do %>
    <div class="form-group">
      <h3>Enter M</h3>
    </div>

    <div class="form-group">
      <%= label_tag :m, 'M' %>
      <%= text_field_tag(:m,
                         nil,
                         class: 'form-control',
                         type: 'number') %>
    </div>

    <%= submit_tag 'Submit', class: 'btn btn-primary' %>
<% end %>
